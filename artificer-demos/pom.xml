  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.artificer</groupId>
    <artifactId>artificer</artifactId>
    <version>0.8.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <groupId>org.artificer.demos</groupId>
  <artifactId>artificer-demos</artifactId>
  <name>Artificer Demos</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.artificer</groupId>
      <artifactId>artificer-common</artifactId>
    </dependency>
    <dependency>
      <groupId>org.artificer</groupId>
      <artifactId>artificer-client</artifactId>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>with-demos</id>
      <activation>
        <property>
          <name>!srampExcludeDemos</name>
        </property>
      </activation>

      <modules>
        <module>artificer-demos-simple-client</module>
        <module>artificer-demos-archive-package</module>
        <module>artificer-demos-query</module>
        <module>artificer-demos-properties</module>
        <module>artificer-demos-ontologies</module>
        <module>artificer-demos-classifications</module>
        <module>artificer-demos-mvn-integration</module>
        <module>artificer-demos-relationships</module>
        <module>artificer-demos-derived-artifacts</module>
        <module>artificer-demos-shell-command</module>
        <module>artificer-demos-webapp-multimodule/artifacts</module>
        <module>artificer-demos-webapp-multimodule/web</module>
        <module>artificer-demos-custom-artifact-builder</module>
      </modules>
    </profile>
    <profile>
      <activation>
        <file>
          <exists>artificer-demos-assembly</exists>
        </file>
      </activation>
      <modules>
        <module>artificer-demos-assembly</module>
      </modules>
    </profile>
  </profiles>

</project>
